.chatmain
  .mainheader
    .mainheader__left
      .mainheader__left-box-group
        = @group.name
      .mainheader__left-box-memberlist
        Member :
        - @group.users.each do |user|
          = user.name
    .mainheader__btn
      = link_to "Edit", edit_group_path(@group), class: "mainheader__btn mainheader__btns--icon"
      

      
 
  .mainmessages
    = render @messages



  
  .mainform
    .mainform__messages
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'mainform__messages', placeholder: 'type a message'
        .mainform__example
    
        .mainform__picture
          = f.label :image, class: 'input-box__image' do
            = icon('fas', 'image', class: 'input-box__image')
            = f.file_field :image, class: 'input-box__file'
            = f.submit 'Send', class: 'mainform__btn'


